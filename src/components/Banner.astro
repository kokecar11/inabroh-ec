---
import Button from './Button.astro'

interface Props {
	title: string
	description: string
	image: string
}

const { title, description, image } = Astro.props
---

<div class="bg-primary/5 flex items-center">
	<div class="container px-14 w-full mx-auto grid place-items-center">
		<div class="w-full flex items-center">
			<div class="flex-1 space-y-4">
				<span>
					<h1 class="text-5xl font-semibold">{title}</h1>
					<p class="text-sm text-black/60 ml-0.5">
						{description}
					</p>
				</span>
				<Button>Ver producto</Button>
			</div>
			<img class="obtj-cover w-1/2" src={image} alt='Brocha Profesional 4"' />
		</div>
	</div>
</div>
